escape ^jj
vbell off
vbell_msg "  Bell  "
startup_message off
hardstatus off
defscrollback 8192

bind s
bind x
bind ^X

# emacs-like bindings for copy mode
bindkey -m "^B" stuff h
bindkey -m "^F" stuff l
bindkey -m "^E" stuff $
bindkey -m "^V" stuff ^F
bindkey -m "^U" stuff ^B
bindkey -m "^ " stuff " "
bindkey -m "^[f" stuff e
bindkey -m "^[b" stuff b
# otherwise, you must hit escape to break an i-search
bindkey -m "^G" stuff ^[
bindkey -m "^[w" stuff "^M"

term screen-256color
bell_msg "Bell in window %n ^G"
nonblock on

# Attempt copy to clipboard integration.
bufferfile $HOME/.screen_exchange
bindkey -m "^M" eval "stuff >" "screen $SHELL -c 'source ~/dotfiles/copy_clipboard.sh && CUTBUFFER=$(cat ~/.screen_exchange) && copy_to_clipboard ; rm ~/.screen_exchange'"
