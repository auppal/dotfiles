# See: https://groups.google.com/forum/#!topic/binary-transparency/f-BI4o8HZW0
[transfer]
        fsckobjects = true
[fetch]
        fsckobjects = true
[receive]
        fsckObjects = true
[core]
	# If the diff-so-fancy formatting script is available use it, otherwise fallback to plain less.
	pager = "(which delta >& /dev/null && delta--theme=ansi-dark) || (which diff-so-fancy >&/dev/null && diff-so-fancy | less --tabs=4 -RFX --pattern '^(Date|added|deleted|modified):' ) || less -R"


# For use with diff-so-fancy
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
